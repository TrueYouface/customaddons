<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<record id="view_tax_form_l10n_tr_account" model="ir.ui.view">
			<field name="name">account.tax.form.l10n_tr_account</field>
			<field name="model">account.tax</field>
			<field name="inherit_id" ref="account.view_tax_form" />
			<field name="arch" type="xml">
				<xpath expr="//group/group[2]" position="inside">
					<field name="is_withholding" />
					<label for="withholding_rate"
						attrs="{'invisible':[('is_withholding','=',False)]}" />
					<div attrs="{'invisible':[('is_withholding','=',False)]}">
						<field name="withholding_rate" class="oe_inline"
							attrs="{'required':[('is_withholding','=',True)], 'required':[('is_withholding','=',True)]}" />
						<span class="o_form_label oe_inline">%</span>
					</div>
					<field name="is_exemption" />
					<field name="is_export_registered" />
					<field name="exemption_code"
						attrs="{'required':['|',('is_exemption','=',True),('is_export_registered','=',True)]}" />
					<field name="exemption_reason"
						attrs="{'required':['|',('is_exemption','=',True),('is_export_registered','=',True)]}" />
				</xpath>
			</field>
		</record>

		<record id="invoice_form_l10n_tr_account" model="ir.ui.view">
			<field name="name">account.move.form.l10n_tr_account</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_move_form" />
			<field name="priority">70</field>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='partner_bank_id']" position="attributes">
					<attribute name="invisible">1</attribute>
				</xpath>
				<xpath expr="//field[@name='partner_bank_id']" position="after">
					<field name="bank_partner_id" invisible="1" >
<!--					<field name="invoice_bank_ids"-->
<!--						options="{'no_create_edit':True, 'no_create':True}"-->
<!--						domain="[('partner_id.commercial_partner_id','=',bank_partner_id)]">-->
						<tree>
<!--							<field name="bank_id" />-->
<!--							<field name="acc_number" />-->
<!--							<field name="currency_id" />-->
<!--							<field name="partner_id" invisible="1" />-->
						</tree>
					</field>
				</xpath>
			</field>
		</record>

		<record id="invoice_supplier_form_l10n_tr_account" model="ir.ui.view">
			<field name="name">account.move.form.l10n_tr_account</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_move_form" />
			<field name="priority">70</field>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='partner_bank_id']" position="attributes">
					<attribute name="invisible">1</attribute>
				</xpath>
				<xpath expr="//field[@name='partner_bank_id']" position="after">
					<field name="bank_partner_id" invisible="1" />
					<field name="invoice_bank_ids"
						options="{'no_create_edit':True, 'no_create':True}"
						domain="[('partner_id.commercial_partner_id','=',bank_partner_id)]">
						<tree>
<!--							<field name="bank_id" />-->
<!--							<field name="acc_number" />-->
<!--							<field name="currency_id" />-->
<!--							<field name="partner_id" invisible="1" />-->
						</tree>
					</field>
				</xpath>
			</field>
		</record>

	</data>
</odoo>
