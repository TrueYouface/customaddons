<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="wizard_partner_statement_form">
            <field name="name">wizard.partner.statement.form</field>
            <field name="model">wizard.partner.doviz.statement</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Cari Dovizli Ekstre" version="7.0">
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="partner_id" invisible="1"/>
                    </group>
                    <footer>
                        <button name='print_report' string="Yazdir" type="object" icon="STOCK_PRINT" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

         <record id="action_wizard_partner_statement_form" model="ir.actions.act_window">
            <field name="name">Partner Doviz Statement Detail</field>
            <field name="res_model">wizard.partner.doviz.statement</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="context">{'default_partner_id': context.get('partner_id', False),}</field>
            <field name="target">new</field>
        </record>


        <record model="ir.ui.view" id="customer_statement_excel_form">
            <field name="name">customer.statement.excel.form</field>
            <field name="model">customer.statement.excel</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Customer Statement Excel" version="7.0">
                    <group>
	                    <field name="file" filename="name" nolabel="1" readonly="1"/>
	                    <field name="name" invisible='1'/>
                    </group>
                    <footer>
                        <button string="Iptal" class="oe_highlight" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="dovizli_ekstre_partner_form">
            <field name="name">partner.dovizli.ekstrebutton</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//div[@name='buttons']" position="inside">
                        <button name="action_print_dovizli_statement" string="Cari Dovizli Ekstre" type="object"
                                attrs="{'invisible':[('has_secondary_curr','=',False)]}"
                                    class="oe_highlight" groups="base.group_user"
                                    context="{'partner_id': id}"/>
                    </xpath>
                </data>
            </field>
        </record>

    </data>
</openerp>