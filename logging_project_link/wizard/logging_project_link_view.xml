<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="logging_linker_view" model="ir.ui.view">
        <field name="name">Logging Linker Form</field>
        <field name="model">logging.linker</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>

<!--                        TODO: log_id does not exist in model-->

<!--                        <field name="log_id" readonly="True" invisible="1"/>-->
                        <field name="task_title"/>
                        <field name="assigned_to"/>
                    </group>
                </group>
                <footer>
                    <button name="create_task"
                            string="Create Task"
                            type="object"
                            class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="logging_link_wizard" model="ir.actions.act_window">
            <field name="name">Logging Linker Window</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">logging.linker</field>
            <field name="view_mode">form</field>
<!--            <field name="view_id">logging_linker_view</field>-->
            <field name="target">new</field>
        </record>

